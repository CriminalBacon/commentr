<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table id="all-comments">
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.sort_by(&:counter).reverse.each do |comment| %>
      <tr>
        <td><%= comment.author %></td>
        <td><%= link_to comment.title, comment_path(comment) %></td>
        <td><%= comment.body %></td>
        <td><%= comment.counter %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %>
            <%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path %>
